<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.pin.id if answer.pin %></td>
        <td><%= answer.pin.description if answer.pin %></td>
        <td><%= answer.user.name if answer.user %></td>
        <td><%= answer.description %></td>
        <td><%= link_to 'Show', answer %></td>
        <% if answer.user==current_user %>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Answer', new_answer_path %>
<%end%>
